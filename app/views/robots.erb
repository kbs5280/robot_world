<h3 class="col-md-12 nav navbar-default navbar-static-top navbar-brand navbar-center text-center">Welcome to Robot Inventory</h3>

  <div id="robot_inventory" class="text-center">

  <% @robots.each do |robot| %>
      <h4><%= robot["id"] %> * <a href="/robots/<%= robot["id"] %>"><%= robot["name"] %></a></h3>
      <a class="btn btn-info" href="/robots/<%= robot["id"] %>/edit">Edit</a>
      <br>
        <form action="/robots/<%= robot["id"] %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input class="btn btn-danger" type="submit" value="DELETE"/>
        </form>
  <% end %>

  </div>
