<form action="/robots/<%= robot_manager.all.find{|r| r["name"] == @robot.name}["id"] %>" method="post">
  <p class="col-md-12 nav navbar-default navbar-static-top navbar-brand navbar-center text-center">Change some of/all the things about Robot.</p>
  <div class="text-center">

    <input type="hidden" name="_method" value="PUT" />
    <input type='text' name='robot[name]' value="<%= @robot.name %>"/><br/>
    <input type='text' name='robot[city]' value="<%= @robot.city %>"/><br/>
    <input type='text' name='robot[state]' value="<%= @robot.state %>"/><br/>
    <input type='text' name='robot[avatar]' value="<%= @robot.avatar %>"/><br/>
    <input type='text' name='robot[birthdate]' value="<%= @robot.birthdate %>"/><br/>
    <input type='text' name='robot[date_hired]' value="<%= @robot.date_hired %>"/><br/>
    <input type='text' name='robot[department]' value="<%= @robot.department %>"/><br/>
    <input class="btn btn-info" type='submit'/>
  </div>
</form>
